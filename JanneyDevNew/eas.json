{
  "cli": {
    "version": ">= 11.0.1"
  },
  "build": {
    "defaults": {
      "node": "20.17.0",
      "yarn": "1.22.22"
    },
    "dev-defaults": {
      "extends": "defaults",
      "distribution": "internal",
      "developmentClient": true,
      "ios": {
        "simulator": true,
        "applicationArchivePath": "ios/build/Build/Products/*-iphonesimulator/*.app"
      }
    },
    "development": {
      "extends": "dev-defaults",
      "channel": "development",
      "env": {
        "EXPO_PUBLIC_BUILD_ENV": "uat"
      }
    },
    "preview": {
      "extends": "defaults",
      "distribution": "internal",
      "channel": "preview",
      "android": {
        "buildType": "apk"
      },
      "env": {
        "EXPO_PUBLIC_BUILD_ENV": "prod"
      }
    },
    "uat": {
      "extends" : "defaults",
      "distribution": "internal",
      "channel": "uat",
      "android": {
        "buildType": "apk"
      },
      "env": {
        "EXPO_PUBLIC_BUILD_ENV": "uat"
      },
      "ios": {
        "image": "latest"
      }
    },
    "production": {
      "extends": "defaults",
      "distribution": "store",
      "channel": "production",
      "env": {
        "EXPO_PUBLIC_BUILD_ENV": "prod"
      },
      "android": {
        "gradleCommand": ":app:bundleRelease"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
